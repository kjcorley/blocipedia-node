<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <%  include ../static/partials/messages.ejs %>
            <h2>Welcome to Blocipedia</h2>
            <div class="row">
                <div class="col-md-8">
                    <h3>Sign Up</h3>
                    <form method="POST" action="/users/signup">
                        <div class="form-group">
                            <label>Name:</label>
                            <input type="text" name="name" placeholder="Enter name" class="form-control">
                            <small class="text-muted" id="nameHelp">name must be at least 3 characters</small>
                        </div>
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" name="email" placeholder="Enter email" class="form-control">
                            <small class="text-muted" id="emailHelp">must be valid address</small>
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" name="password" placeholder="Enter password" class="form-control">
                            <small class="text-muted" id="passwordHelp">password must be at least 6 characters</small>
                        </div>
                        <div class="form-group">
                            <label>Password:</label>
                            <input type="password" name="password_conf" placeholder="Enter Password confirmation" class="form-control">
                            <small class="text-muted" id="passwordConfHelp">must match password above</small>
                        </div><br/>
                        <input type="submit" value="Sign Up" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </main>
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>