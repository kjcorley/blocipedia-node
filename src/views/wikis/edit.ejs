<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../static/partials/head.ejs %>
    </head>
    <body>
        <% include ../static/partials/navbar.ejs %>
        <main class="container">
            <%  include ../static/partials/messages.ejs %>
            <h2>Edit Wiki</h2>
            <div class="row">
                <div class="col-md-8">
                    <form method="POST" action="/wikis/<%= wiki.id %>/update">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" name="title" placeholder="Enter title" class="form-control" value="<%= wiki.title %>">
                            <small class="text-muted" id="titleHelp">name must be at least 5 characters</small>
                        </div>
                        <div class="form-group">
                            <label>Body</label>
                            <textarea rows="4" name="body" placeholder="Enter wiki body" class="form-control"><%= wiki.body %></textarea>
                            <small class="text-muted" id="bodyHelp">body must be at least 5 characters</small>
                        </div>
                        <br/>
                        <input type="submit" value="Submit" class="btn btn-primary">
                    </form>
                </div>
            </div>
        </main>
        <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>